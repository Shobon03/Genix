<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pjiproject.genix">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/genix_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/genix_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Genix.Light">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name = ".GameActivity"></activity>
        <activity android:name = ".GameOverviewActivity"></activity>
        <activity android:name = ".TutorialActivity"></activity>
        <activity android:name = ".CreateGameActivity"></activity>
        <activity android:name = ".AboutActivity"></activity>
        <activity android:name = ".ErrorHandlingActivity"></activity>
    </application>

</manifest>